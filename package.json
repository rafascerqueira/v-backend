{
  "name": "v-backend",
  "version": "2.0.0",
  "description": "Backend do aplicativo Vendinhas",
  "author": "Rafael Cerqueira<rafascerqueira.dev@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "start": "nest start",
    "start:dev": "node scripts/dev-prestart.js && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome ci .",
    "test": "jest --watchman=false",
    "test:watch": "jest --watch --watchman=false",
    "test:cov": "jest --coverage --watchman=false",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --watchman=false",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand --forceExit --watchman=false",
    "test:e2e:dev": "jest --config ./test/jest-e2e.json --watch --watchman=false",
    "test:db:up": "docker compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker compose -f docker-compose.test.yml down",
    "db:seed": "pnpm prisma db seed"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/static": "^9.0.0",
    "@nestjs/common": "^11.1.12",
    "@nestjs/core": "^11.1.12",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-fastify": "^11.1.12",
    "@nestjs/platform-socket.io": "^11.1.12",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/websockets": "^11.1.12",
    "argon2": "^0.44.0",
    "fastify": "^5.7.1",
    "ioredis": "^5.9.2",
    "otpauth": "^9.4.1",
    "otplib": "^13.1.1",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.12",
    "@prisma/client": "^6.19.2",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "jest": "^30.2.0",
    "pg": "^8.17.2",
    "prisma": "^6.19.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "modules/**/controllers/**/*.ts",
      "modules/**/services/**/*.ts",
      "shared/**/*.ts",
      "!**/*.spec.ts",
      "!main.ts",
      "!app.module.ts",
      "!**/*.module.ts",
      "!**/dto/**",
      "!**/interfaces/**",
      "!**/config/**",
      "!**/*.d.ts",
      "!**/swagger.config.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "^.+/.+\\.d\\.ts$",
      "<rootDir>/shared/prisma/prisma.module.ts"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "json-summary"
    ],
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/../jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@domain/(.*)$": "<rootDir>/domain/$1",
      "^@infrastructure/(.*)$": "<rootDir>/shared/$1",
      "^@interfaces/(.*)$": "<rootDir>/interfaces/$1"
    }
  }
}