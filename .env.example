# Server
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Prisma & Database settings
DATABASE_URL="postgresql://user:password@localhost:5432/database?schema=public"

POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=database
POSTGRES_SCHEMA=public
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# JWT (RS256 if keys exist in JWT_KEYS_DIR, fallback to HS256)
# Generate keys: openssl genrsa -out keys/private.pem 2048 && openssl rsa -in keys/private.pem -pubout -out keys/public.pem
JWT_KEYS_DIR=./keys
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_ACCESS_TOKEN_EXPIRES_IN=1d
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Redis (required for token blacklist/logout)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_DEFAULT_TTL=3600
REDIS_KEY_PREFIX=vendinhas:

# Payment Providers (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_PRO=price_your_pro_price_id
STRIPE_PRICE_ENTERPRISE=price_your_enterprise_price_id

# Payment Providers (PagSeguro) - Alternative to Stripe
PAGSEGURO_EMAIL=your_pagseguro_email
PAGSEGURO_TOKEN=your_pagseguro_token
PAGSEGURO_WEBHOOK_SECRET=your_webhook_secret
PAGSEGURO_SANDBOX=true

# App URLs (for webhooks and redirects)
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000